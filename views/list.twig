{% extends "main.twig" %}

{% block page_title %}Home{% endblock %}

{% block main_content %}
      <div class="row">
        <div class="col-12">
          <h2>List of All the Tasks I Need to Not Forget About</h2>
          <hr class="my-1"> </div>
      </div>
      <div class="row">
        <div class="col-md-12 p-3">
          <table class="table table-compact table-hover table-striped table-bordered">
            <tbody>

              {% for task in tasks %}
                <tr>
                  {% if task.completed %}<td class="completed text-muted">{% else %}<td>{% endif %}
                    <h4 class="mb-1">{{task.name}}
                      <small class="text-muted">{{task.date_added}}</small>
                    </h4>
                    <p class="mb-0"> {{task.description}}&nbsp;</p>
                  </td>
                  <td class="text-right">
                    <form method="POST" class="m-0" action="">
                      {% if task.completed == 0 %}<input type="submit" class="btn btn-success btn-sm mb-1" value="Complete">{% endif %}
                      <input type="submit" class="btn btn-warning btn-sm  mb-1" value="Delete">
                      <input type="hidden" name="id" value="{{ task.id }}" /><br />
                    </form>
                  </td>
                </tr>
					    {% endfor %}

            </tbody>
          </table>
        </div>
      </div>
{% endblock %}